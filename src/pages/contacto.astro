    body {
      margin: 0;
      font-family: 'Segoe UI', system-ui, sans-serif;
      scroll-behavior: smooth;
      background-color: #f8f9fa;
      color: #2b2d42;
    }

    /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background-color: white;
      position: sticky;
      top: 0;
      z-index: 10;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .logo { font-weight: 700; font-size: 1.5rem; color: #3a86ff; }
    .nav-links { list-style: none; display: flex; gap: 2rem; }
    .nav-links a { text-decoration: none; color: #2b2d42; font-weight: 600; transition: color 0.3s; }
    .nav-links a:hover { color: #3a86ff; }

    /* Hero */
    .hero { text-align: center; padding: 4rem 2rem; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); }
    .hero-title { font-size: 3rem; font-weight: 700; }
    .hero-title span { color: #3a86ff; }
    .hero-subtitle { font-size: 1.25rem; color: #6c757d; margin-top: 1rem; }

    /* Contacto */
    .contact-section { max-width: 1000px; margin: 0 auto; padding: 3rem 2rem; }
    .contact-container { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 3rem; }
    .contact-form { background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.05); }
    .contact-form input, .contact-form textarea { width: 100%; padding: 0.75rem 1rem; margin-bottom: 1rem; border: 1px solid #ddd; border-radius: 8px; font-size: 1rem; }
    .cta-button { background-color: #3a86ff; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 50px; font-weight: 600; cursor: pointer; transition: 0.3s; }
    .cta-button:hover { background-color: #2667cc; }

    .contact-map img { width: 100%; aspect-ratio: 3 / 1; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }

    /* Horarios */
    .schedule { text-align: center; margin-bottom: 2rem; }
    table { margin: 0 auto; border-collapse: collapse; width: 60%; }
    th, td { padding: 0.75rem 1rem; border: 1px solid #ddd; }
    th { background-color: #3a86ff; color: white; }
    td { background-color: #f8f9fa; }

    /* Redes sociales */
    .socials { display: flex; justify-content: center; gap: 2rem; font-size: 2rem; margin-bottom: 3rem; }

    /* Footer */
    footer { background-color: #2b2d42; color: white; text-align: center; padding: 2rem 1rem; }
    .footer-text { font-weight: 600; animation: colorChange 3s infinite alternate; }
    @keyframes colorChange { 0%{color:white;} 50%{color:red;} 100%{color:white;} }

    @media (max-width: 768px) {
      .contact-container { grid-template-columns: 1fr; }
      table { width: 90%; }
    }
  </style>

  <script is:inline>
    document.getElementById('whatsappForm').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('name').value;
      const phone = document.getElementById('phone').value;
      const message = document.getElementById('message').value;
      const text = `Nombre: ${name}\nTeléfono: ${phone}\nMensaje: ${message}`;
      const whatsappURL = `https://api.whatsapp.com/send?phone=5215551234567&text=${encodeURIComponent(text)}`;
      window.open(whatsappURL, '_blank');
    });
  </script>
